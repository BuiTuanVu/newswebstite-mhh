<div class="container future-post">
	<div class="h-600x h-sm-auto">

		<div class="h-2-3 h-sm-auto oflow-hidden">
			{{#each this.topViews01}}

			<div class="pb-5 pr-5 pr-sm-0 float-left float-sm-none w-2-3 w-sm-100 h-100 h-sm-300x">
				<a class="pos-relative h-100 dplay-block" href="/user/posts/{{post_id}}">

					<div class="img-bg bg-1 bg-grad-layer-6"
						style="background: url({{post_image}}) no-repeat center; background-size: cover;">
					</div>

					<div class="abs-blr color-white p-20 bg-sm-color-7">
						<h3 class="mb-15 mb-sm-5 font-sm-13"><b>{{post_title}}</b></h3>
						<ul class="list-li-mr-20">
							<li> <span class="color-primary"><b>{{cate_name}}</b></span> {{#formatDate post_date}}
								{{/formatDate}}</li>
							<li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>{{post_view}}</li>
							
						</ul>
					</div>
					<!--abs-blr -->
				</a><!-- pos-relative -->
			</div><!-- w-1-3 -->

			{{/each}}

			<div class="float-left float-sm-none w-1-3 w-sm-100 h-100 h-sm-600x">
				{{#each this.topViews02}}
				{{#if_eq stt 1}}
				<div class="pl-5 pb-5 pl-sm-0 ptb-sm-5 pos-relative h-50">
					<a class="pos-relative h-100 dplay-block" href="/user/posts/{{post_id}}">

						<div class="img-bg bg-2 bg-grad-layer-6"
							style="background: url({{post_image}}) no-repeat center; background-size: cover;"></div>

						<div class="abs-blr color-white p-20 bg-sm-color-7">
							<h4 class="mb-10 mb-sm-5"><b>{{post_title}}</b></h4>
							<ul class="list-li-mr-20">
								<li> <span class="color-primary"><b>{{cate_name}}</b></span>,
									{{#formatDate post_date}}
									{{/formatDate}}</li>
								<li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>{{post_view}}</li>
								
							</ul>
						</div>
						<!--abs-blr -->
					</a><!-- pos-relative -->
				</div><!-- w-1-3 -->
				{{else}}
				<div class="pl-5 ptb-5 pl-sm-0 pos-relative h-50">
					<a class="pos-relative h-100 dplay-block" href="/user/posts/{{post_id}}">

						<div class="img-bg bg-3 bg-grad-layer-6"
							style="background: url({{post_image}}) no-repeat center; background-size: cover;"></div>

						<div class="abs-blr color-white p-20 bg-sm-color-7">
							<h4 class="mb-10 mb-sm-5"><b>{{post_title}}</b></h4>
							<ul class="list-li-mr-20">
								<li> <span class="color-primary"><b>{{cate_name}}</b></span>,
									{{#formatDate post_date}}
									{{/formatDate}}</li>
								<li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>{{post_view}}</li>
								
							</ul>
						</div>
						<!--abs-blr -->
					</a><!-- pos-relative -->
				</div><!-- w-1-3 -->
				{{/if_eq}}
				{{/each}}
			</div><!-- float-left -->

		</div><!-- h-2-3 -->

		<div class="h-1-3 oflow-hidden">
			{{#each this.topViews03}}
			<div class="pr-5 pr-sm-0 pt-5 float-left float-sm-none pos-relative w-1-3 w-sm-100 h-100 h-sm-300x">
				<a class="pos-relative h-100 dplay-block" href="/user/posts/{{post_id}}">

					<div class="img-bg bg-4 bg-grad-layer-6"
