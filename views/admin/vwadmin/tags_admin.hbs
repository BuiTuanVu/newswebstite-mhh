        <script>
            $('#main-navbar').dynamicMenu();
            DecoupledEditor
                .create(document.querySelector('#editor'))
                .then(editor => {
                    const toolbarContainer = document.querySelector('#toolbar-container');

                    toolbarContainer.appendChild(editor.ui.view.toolbar.element);
                })
                .catch(error => {
                    console.error(error);
                });

            $(document).ready(function () {
                $("button#btnEdit").click(function () {
                    $("#header_add").text("Edit Tag");
                    $("#btnAdd").slideUp("fast", function () {
                        $("#btnSave").slideDown("fast");
                        $("#btnCancel").slideDown("fast");
                    });
                });
                $("#btnSave").click(function () {
                    if ($("#nameTag").val() == '') {
                        $("#nameWarn").html('<p id="warn"><code>Please fill out the name of tag</code></p>');
                            return false;
                        
                    }
                    $("#header_add").text("Edit Tag");
                    $("#btnSave").slideUp("fast", function () {
                        $("#btnAdd").slideDown("fast");
                    });
                });

                $("#btnCancel").click(function(){
                    $("#header_add").text("Add New Tag");
                    
                    $("#btnSave").slideUp("fast", function () {
                        $("#btnCancel").slideUp("fast");
                        $("#btnAdd").slideDown("fast");
                    });
                })
                $("#nameTag").focus(function () {
                            $("#warn").remove();
                        });

                $("#btnAdd").click(function () {
                    if ($("#nameTag").val() == '') {
                        $("#nameWarn").html('<p id="warn"><code>Please fill out the name of tag</code></p>');
                        return false;
                    }

                });

            });


        </script>

