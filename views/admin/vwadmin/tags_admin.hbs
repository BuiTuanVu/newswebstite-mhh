        <div class="content-wrapper" id="content">
            <!-- Container-fluid starts -->
            <div class="container-fluid">
                <!-- Header Starts -->
                <div class="row">
                    <div class="col-sm-12 p-0">
                        <div class="main-header">
                            <h4>Tags</h4>
                            <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                                <li class="breadcrumb-item">
                                    <a href="index.html">
                                        <i class="icofont icofont-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item"><a href="#">Tags</a>
                                </li>

                            </ol>
                        </div>
                    </div>
                </div>
                <!-- Header end -->


                <!-- Add new post -->
                <div class="row">
                    <!-- Form Control starts -->
                    <div class="col-lg-4 col-md-12" id="tag">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text" id="header_add">Add New Tag</h5>

                            </div>

                            <!-- end of modal -->

                            <div class="card-block">
                                <form method="POST">
                                    <div class="form-group">
                                        <label for="" class="form-control-label">Name</label>
                                        <input type="text" class="form-control" id="TagName" name="TagName"
                                            aria-describedby="emailHelp" placeholder="">
                                        <div id="nameWarn"></div>
                                        <small id="nameHelp" class="form-text text-muted">The name is how it appears on
                                            your site.</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="form-control-label">Slug</label>
                                        <input type="text" class="form-control" id="TagSlug" aria-describedby="emailHelp"
                                            placeholder="">
                                        <small id="emailHelp" class="form-text text-muted">The "slug" is the
                                            URL-friendly version of the name. It is usually all lowercase and contains
                                            only letter, numbers and hyphens.</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="form-control-label">Description</label>
                                        <textarea name="TagDes" id="TagDes" rows="3" class="form-control"></textarea>
                                        <small id="emailHelp" class="form-text text-muted">The description is not
                                            prominent by default; however some themes may show it.</small>
                                    </div>


                                    <button type="submit" id="btnAdd"
                                        class="btn btn-success waves-effect waves-light m-r-30">ADD</button>
                                    

                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Form Control ends -->

                    <!-- Textual inputs starts -->
                    <div class="col-lg-8 col-md-12" id="table">
                        <!-- Post Overview -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text">Tags</h5>
                                <div class="col-lg-4 f-right">
                                    <div class="input-group">
                                        <input id="btnaddon2" type="text" class="form-control" placeholder="Search Tag"
                                            aria-describedby="btn-addon2">
                                        <span class="input-group-btn" id="btn-addon2"><button type="submit"
                                                class="btn btn-primary shadow-none addon-btn waves-effect waves-light"><i
                                                    class="icofont icofont-search-alt-2"></i></button></span>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-sm-9 table-responsive">
                                            <table class="table table-hover" aria-disabled="true">
                                                <thead>
                                                    <tr>

                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Slug</th>

                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each this.tags}}
                                                    <tr>

                                                        <td>{{tag_name}}</td>
                                                        <td>{{tag_des}}
                                                        </td>
                                                        <td>{{tag_slug}}</td>


                                                        <td class="td-action">

                                                            <button id="btnEdit" type="button"
                                                                class="btn btn-mini btn-warning waves-effect waves-light">
                                                                <i class="icofont icofont-edit-alt"></i>
                                                            </button>

                                                            <button id="btnDelete" type="button"
                                                                class="btn btn-mini btn-danger waves-effect waves-light">
                                                                <i class="icofont icofont-delete-alt"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    {{/each}}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- Textual inputs ends -->
                    </div>


                    <!-- Color Picker start -->
                    <!-- Row start -->

                </div>
            </div>
        </div>

