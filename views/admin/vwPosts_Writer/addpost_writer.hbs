{{#section 'js'}}
<script
    src="https://cdn.tiny.cloud/1/o407ib97nrh99sq7gfqeqgf3nqt30y6hfsiw3zp36wiw295v/tinymce/5/tinymce.min.js"></script>
<script>
    $(function () {

        tinymce.init({
            selector: '#editor',
            height: 500,
            menubar: false,
            plugins: 'paste image link autolink lists table media',
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
                'forecolor backcolor',
                'table link image media',
            ],
        });
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fa/theme.min.js"></script>
<script>
    $(function () {
        $('#PostImage').fileinput({
            theme: 'fa',
            dropZoneEnabled: false,
            allowedFileExtensions: ['png', 'jpg', 'gif'],
            uploadUrl: '/upload',
            uploadAsync: false,
        });
    })
</script>
{{/section}}

{{#section 'css'}}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/css/fileinput.min.css" media="all"
    rel="stylesheet" type="text/css" />
{{/section}}

<div class="wrapper">
    <div class="loader-bg">
        <div class="loader-bar">
        </div>
    </div>
    <!-- Navbar-->
    {{> navbar}}


    <!-- Sidebar chat end-->
    <div class="content-wrapper">
        <!-- Container-fluid starts -->
        <div class="container-fluid">
            <!-- Header Starts -->
            <div class="row">
                <div class="col-sm-12 p-0">
                    <div class="main-header">

                        <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                            <li class="breadcrumb-item">
                                <a href="index.html">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#">Post</a>
                            </li>
                            <li class="breadcrumb-item"><a href="#">Add New Post</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- Header end -->


            <!-- Add new post -->
            <div class="row">
                <!-- Form Control starts -->
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-header-text">Add New Post</h5>
                            <div class="f-right">
                                <a href="" data-toggle="modal" data-target="#input-type-Modal"><i
                                        class="icofont icofont-code-alt"></i></a>
                            </div>
                        </div>

                        <!-- end of modal -->

                        <div class="card-block">
                            <form method="POST">
                                <div class="form-group">
                                    <label for="PostTitle" class="form-control-label">Title</label>
                                    <input type="text" class="form-control" id="PostTitle" name="PostTitle"
                                        aria-describedby="emailHelp" placeholder="">
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your
                                        email with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1" class="form-control-label">Description</label>
                                    <textarea name="PostDes" id="PostDes" rows="3" class="form-control max-textarea"
                                        maxlength="255"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="content" class="form-control-label">Content</label>
                                    <div id="toolbar-container"></div>

                                    <!-- This container will become the editable. -->
                                    <textarea id="editor" placeholder="Content of post here"
                                        name="PostContent"></textarea>
                                </div>
                                <div class="form-group ">
                                    <label for="" class="form-control-label">
                                        Categories
                                    </label>
                                    <select class="form-control " id="PostCateID" name="PostCateID">
                                        <option value="0" disabled>--Choose category--</option>
                                        {{#each this.categories}}
                                        <option value="{{cate_id}}">{{cate_name}}</option>
                                        {{/each}}

                                    </select>
                                </div>

                                <div class="form-group ">
                                    <label for="" class="form-control-label">Tags</label></br>
                                    <input type="text" name="PostTag" data-role="tagsinput" placeholder="">

                                </div>
                                <div class="form-group">
                                    <label for="exampleSelect1" class="form-control-label">Author</label>
                                    <select class="form-control" id="PostUserID" name="PostUserID">
                                        <option value="0" disabled>--Choose author--</option>
                                        {{#each this.editors}}
                                        <option value="{{user_id}}">{{user_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="PostImage" class="form-control-label">Photo</label>


                                    <input type="text" class="form-control" id="PostAvatar" name="PostAvatar"
                                        aria-describedby="emailHelp" placeholder="Enter url of image">

                                </div>


                                <div class="form-row text-center">
                                    <div class="col-12">
                                        <button type="submit"
                                            class="btn btn-success waves-effect waves-light m-r-30">Submit</button>
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>
                <!-- Form Control ends -->

                <!-- Textual inputs starts -->

                <!-- Textual inputs ends -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-header-text">Update image</h5>
                            
                        </div>

                        <!-- end of modal -->

                        <div class="card-block">
                            <form>
                            <div class="form-group">
                                    <label for="PostImage" class="form-control-label">Photo</label>


                                    <div class="file-loading">
                                        <input id="PostImage" name="PostImage" type="file" multiple>
                                    </div>

                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Color Picker start -->
            <!-- Row start -->

        </div>
    </div>
</div>



